<div class="container">  
  <div class="row">  
    <h2 class="sc-header-devise header-devise-tagline">Sign in</h2>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs form-group">
          <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', class: 'form-control input-lg main-input devise-input' %>
          <%= f.input_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control input-lg main-input devise-input' %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div> 

        <div class="form-actions">
          <%= f.button :submit, "Sign in", class: 'btn btn-black btn-lg btn-block' %><br/>
        </div>

      <div class="text-center">  
        <%= link_to "Don't have an account?", new_user_registration_path, class: 'btn-clear' %>
      </div>
    <% end %>
    </div>
  </div>
</div>
