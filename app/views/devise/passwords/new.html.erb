<div class="container">
  <div class="row">
    <h2 class="page-heading header-devise-tagline">Forgot your password?</h2>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input_field :email, required: true, autofocus: true, label: false, placeholder: "Email", class: 'form-control input-lg main-input devise-input' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Send me reset password instructions", class: 'btn btn-black btn-lg btn-block' %>
        </div>
      <% end %>
      <br>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
