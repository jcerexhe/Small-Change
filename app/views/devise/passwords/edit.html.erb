<div class="container">
  <div class="row">
    <h2 class="page-heading header-devise-tagline">Change your password</h2>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input_field :password, label: "New password", required: true, autofocus: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), class: 'form-control input-lg main-input devise-input' %>
          <%= f.input_field :password_confirmation, label: "Confirm your new password", required: true, class: 'form-control input-lg main-input devise-input' %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: 'btn btn-black btn-lg btn-block' %>
        </div>
      <% end %>
      <br>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
