<div class="container">
  <div class="row">  
    <% if params[:submission_id] %>
      <h2 class="page-heading">Thanks!</h2>
      <h2 class="header-devise-tagline">Sign up to track your progress.</h2>
    <% else %>
      <h2 class="page-heading header-devise-tagline">Sign up</h2>
    <% end %>
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4 ">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>
        <center>
        <div class="form-inputs form-group">
          <%= f.input_field :email, required: true, autofocus: true, label: false, placeholder: 'Email', class: 'form-control input-lg main-input devise-input' %>
          <%= f.input_field :password, required: true, label: false, placeholder: 'Password', class: 'form-control input-lg main-input devise-input' %>
          <%= f.input_field :password_confirmation, required: true, label: false, placeholder: 'Password confirmation', class: 'form-control input-lg main-input devise-input' %>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Sign up", class: 'btn btn-black btn-lg btn-block' %>
          <div class=''><br>
            <%= link_to 'Already signed up?', new_user_session_path, class: 'btn-clear' %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
