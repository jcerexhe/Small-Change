<div class="container">
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-1">
    <h2 class="page-heading header-devise-tagline">Newcomers.</h2>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="hidden"><%= devise_error_messages! %></div>
      <% if devise_error_messages! %>
        <% flash.each do |key, value| %>
          <div class="flash <%= key %> alert alert-danger"><%= value %></div>
        <% end %>
      <% end %>
      <div class="form-inputs form-group">
        <%= f.input_field :first_name, required: true, autofocus: true, label: false, placeholder: 'First Name', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :last_name, required: true, autofocus: true, label: false, placeholder: 'Last Name', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :email, required: true, autofocus: true, label: false, placeholder: 'Email', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :mobile, required: false, autofocus: true, label: false, placeholder: 'Mobile', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :password, required: true, label: false, placeholder: 'Password', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :password_confirmation, required: true, label: false, placeholder: 'Password confirmation', class: 'form-control input-lg main-input devise-input' %>
        <div class="">
          <%= f.check_box :terms_of_service, required: true %>
          <%= f.label :terms_of_service, "I agree to the #{link_to 'Terms & Conditions', terms_path}.".html_safe, class: "terms-label" %>
        </div>
        <div class="">
          <%= f.check_box :mailing_list, required: true %>
          <%= f.label :mailing_list, "Keep me in the loop with Small Change", class: "terms-label" %>
        </div>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign up", class: 'btn btn-black btn-lg btn-block' %>
      </div>
    <% end %>
  </div>
  <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-2 ">
    <h2 class="page-heading header-devise-tagline">Regulars.</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs form-group">
        <%= f.input_field :email, required: false, autofocus: true, label: false, placeholder: 'Email', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input_field :password, required: false, label: false, placeholder: 'Password', class: 'form-control input-lg main-input devise-input' %>
        <%= f.input :remember_me, class: "terms-label", as: :boolean if devise_mapping.rememberable? %>
      </div> 
      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: 'btn btn-black btn-lg btn-block' %><br/>
      </div>
    <% end %>
  </div>
</div>
