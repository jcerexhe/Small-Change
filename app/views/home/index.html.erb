<div id="welcome" class="people-bg">  
  <div class='gradient-overlay'>
    <div class="container">  
      <div class='welcome-content col-xs-12 col-sm-6 col-sm-offset-3 text-center'>
        <h2 class="welcome-tagline">Improve the effectiveness of your social media activism</h2>
        <%= simple_form_for(@submission) do |f| %>
          <div class="form-inline">
            <%= f.input_field :url, class: 'form-control', placeholder: "Enter a link to an article", class: 'form-control input-lg main-input', size: '40' %>
            <button class="btn btn-black btn-lg" type="submit">GET STARTED</button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div id="howitworks">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="sc-header black-header">How it Works</h2>
      <%= render 'home/timeline' %>
    </div>
  </div>
</div>
