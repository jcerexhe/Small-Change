<% unless user_signed_in? %>  
  <!-- Modal -->
  <div class="modal fade" id="welcomeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="close-btn">&times;</span></button>
          <h4 class="modal-title text-center" id="myModalLabel">Welcome to Small Change</h4>
        </div>
        <div class="modal-body">
          <p style="font-size:18px;">Small Change is about putting an end to slacktivism.</p>
          <p style="font-size:18px;">We're still getting a few things ready, but feel free to look around and even link a social media post to a petition!</p>
          <p style="font-size:18px;">Coming soon:</p>
          <ul>
            <li style="font-size:18px;">Link online content you share to a related charity.</li>
            <li style="font-size:18px;">Donate to related charities with one click.</li>
            <li style="font-size:18px;">Track the impact your posts are making.</li>
          </ul>
          <div class="hidden-xs hidden-sm text-center">
            <a href="<%= new_user_registration_path %>" class="btn btn-black btn-lg btn-modal">Join us at Small Change today.</a>
          </div>
          <div class="hidden-md hidden-lg">
            <a href="<%= new_user_registration_path %>" class="btn btn-black btn-lg btn-modal btn-block">Join us</a>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div id="welcome" class="people-bg">  
  <div class='gradient-overlay'>
    <div class="container">  
      <div class='welcome-content col-xs-12 col-sm-6 col-sm-offset-3 text-center'>
        <h2 class="welcome-tagline">Making social media meaningful.</h2>
        <div class="hidden-xs hidden-sm">
          <%= simple_form_for(@submission) do |f| %>
            <%= f.error_notification %>  
            <div class="form-inline">
              <%= f.input_field :url, placeholder: "Enter a link to an article", class: 'form-control input-lg main-input', size: '40', autofocus: true %>
              <button class="btn btn-black btn-lg" type="submit">GET STARTED</button>
            </div>
          <% end %>
        </div>
        <div class="hidden-md hidden-lg">
          <%= simple_form_for(@submission) do |f| %>
            <%= f.error_notification %> 
            <div class="form-inline">
              <%= f.input_field :url, placeholder: "Enter a link to an article", class: 'form-control input-lg main-input mobile-input', autofocus: true, size: '52' %>  
              <button class="btn btn-black btn-lg btn-block btn-mobile" type="submit">GET STARTED</button>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div id="howitworks">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h2 class="sc-header black-header">How it Works</h2>
      <%= render 'home/timeline' %>
    </div>
  </div>
</div>
<div id="trending">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <div class="row">
        <div class="col-md-6 col-md-offset-3"> 
          <h2 class="sc-header black-header">Trending Articles</h2> 
          <p class="sc-header-tagline">Some of the top performing articles that are raising funds and promoting petitions right now.</p>
        </div>
      </div>
      <%= render 'shared/featured' %>
      <div class="hidden-xs text-center">
        <%= link_to 'View all', submissions_path, class: 'btn btn-black btn-lg' %>
      </div>
      <div class="hidden-sm hidden-md hidden-lg text-center">
        <%= link_to 'View all', submissions_path, class: 'btn btn-black btn-lg btn-block' %>
      </div>
    </div>
  </div>
</div>
<div id="letsgo">
  <div class="container">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3 text-center">
      <h2 class="sc-header">Let's go!</h2>
      <%= render 'shared/get_started_form' %>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#welcomeModal').modal('show');
</script>
