<% provide(:title, @submission.title) %>

<% content_for :head do %>
  <meta property="og:site_name" content="Small Change Giving" />
  <meta property="og:title" content= "<%= @submission.title %>" />
  <meta property="og:description" content="<%= @submission.description %> | Small Change" />
  <meta property="og:url" content= "<%= @submission.url %>" />
  <meta property="og:type" content="blog" />
  <meta property="og:image" content='<%= @submission.image %>' />
<% end %>

<%= render 'banner' %>

<% if @submission.youtube %>
  <div class="hidden-xs hidden-sm">
    <center>
      <div class="iframe-wrapper"> 
        <iframe class="iframe-md" width="70%" height="550" src="<%= @submission.url %>" frameborder="0" allowfullscreen scrolling="yes"></iframe>
      </div>
    </center>
  </div>
  <div class="hidden-md hidden-lg">
    <div class='iframe-wrapper'>
      <iframe class="iframe-xs" width="90%" height="550" src="<%= @submission.url %>" frameborder="0" allowfullscreen scrolling="yes"></iframe>
    </div>
  </div>
<% else %>
  <div class="hidden-xs hidden-sm">
    <center>
      <div class="iframe-wrapper">  
        <iframe class="iframe-md" width="100%" height="2000" src="<%= @submission.url %>" frameborder="0" allowfullscreen scrolling="yes"></iframe>
      </div>
    </center>
  </div>
  <div class="hidden-md hidden-lg">
    <div class='iframe-wrapper'>
      <iframe class="iframe-xs" width="100%" height="2000" src="<%= @submission.url %>" frameborder="0" allowfullscreen scrolling="yes"></iframe>
    </div>
  </div>
<% end %>

