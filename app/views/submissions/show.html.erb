<% provide(:title, @submission.title) %>

<% content_for :head do %>
<meta property="og:site_name" content="Small Change Giving" />
<meta property="og:title" content= "<%=@submission.title%>" />
<meta property="og:description" content="<%=@submission.description%> | Small Change" />
<meta property="og:url" content= "<%=@submission.url%>" />
<meta property="og:type" content="blog" />
<meta property="og:image" content='<%=@submission.image%>'>
<% end %>


<div class = 'container'>

  <%= render 'banner' %>

  <% if @submission.youtube %>
    <meta content="<%=@submission.image%>" property="og:image" />
      <br><br>
      <center>
        <iframe width="90%" height="550" src= "<%= @submission.url %>" frameborder="0" allowfullscreen></iframe>
      </center>
  <% else %>
      <div class = 'submission'>
      		<br><br><br><iframe width="100%" height="2000" src= "<%= @submission.url %>" frameborder="0" allowfullscreen>
      		</iframe>
      </div>
  <% end %>
</div>

  



      <script>
        $(document).ready(function() {
            $(':submit').on('click', function(event) {
                event.preventDefault();

                var $button = $(this),
                    $form = $button.parents('form');

                var opts = $.extend({}, $button.data(), {
                    token: function(result) {
                        $form.append($('<input>').attr({ type: 'hidden', name: 'stripeToken', value: result.id })).submit();
                    }
                });

                StripeCheckout.open(opts);
            });
        });
        </script>









