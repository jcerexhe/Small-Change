<% if params[:type] == "petition" %>

  <h2 class="sc-header">Nice!</h2>
  <h2 class="petition-tagline">Please enter a link to the petition.</h2>
  <%= simple_form_for(@submission) do |f| %>
    <%= f.error_notification %>
    <div class="form-inline">
      <%= f.input_field :petition_link, class: 'form-control', placeholder: "http://www.petitionwebsite.com/", class: 'form-control input-lg main-input', size: '40', autofocus: true %>
      <button class="btn btn-black btn-lg" type="submit">SUBMIT</button>
    </div>
  <% end %>

<% else %>
  
  <h2 class="sc-header">Sweet!</h2>
  <h2 class="petition-tagline">Please pick the charity.</h2>
  <%= simple_form_for(@submission) do |f| %>
    <%= f.error_notification %>
      <div class="row text-left">
        <% @charities.each do |charity| %>
          <div class="col-sm-6 ">  
            <div data-link="<%=submission_path(@submission, charity: charity.id, type: "donation")%>">
              <div class="panel charity-panel">
                <div class="panel-body">    
                  <ul class="media-list">
                    <li class="media">
                      <div class="col-sm-4">
                        <div class="media-left">
                          <img src=<%=charity.logo%> alt="<%= charity.name %>" width="100%" height="60px">
                            <center>
                              <%= link_to "Select", submission_path(@submission, charity: charity.id, type: "donation"), class:'btn btn-black-panel' %>
                            </center>
                        </div>
                      </div>
                      <div class="col-sm-8">
                        <div class="media-body">
                          <h3><%= charity.name %></h3>
                          <p class='blurb'><%=truncate(charity.blurb, length: 128)%></p>
                        </div>
                      </div>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="form-inputs">
        <% if user_signed_in? %>
          <%= f.input :user, as: :hidden, input_html: { value: current_user.email }%>
        <% end %>
        <%#= f.hidden_field :submission_type, default: "donation" %>
        <%#= f.association :charity, as: :check_boxes, unique: true %>
        <%#= f.association :cause %>
      </div>
    <% end %>

<% end %>
