<%= simple_form_for(@submission) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :url %>
    <%= f.association :user %>
    <%= f.association :charity %>
    <%= f.association :cause %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
