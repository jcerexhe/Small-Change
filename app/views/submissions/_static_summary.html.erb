<div class='submission-image'>
  <img src="<%= @submission.image %>", width="100%" >
</div>
<div class='col-xs-10 col-xs-offset-1 col-sm-10 col-sm-offset-1'>
  <div class="submission-source">
    <%= strip_url(@submission.url) %>
  </div>
  <div class=''>
    <hr>
    <p class='submission-description'><%= @submission.description %>
    <%= link_to "Read more <i class='fa fa-chevron-down'></i>".html_safe, @submission.url %> </p>
  </div>
  <div class="read-more">
    <%= link_to "Take Action Through Small Change", '', class: 'btn btn-black-show btn-block' %>
  </div>
</div>

