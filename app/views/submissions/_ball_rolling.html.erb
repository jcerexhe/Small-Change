<div class="modal fade" id="welcomeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true" class="close-btn">&times;</span></button>
          <center><img src="<%= @charity.logo %>", class="charity-logo"></center>
        <h4 class="modal-title text-center" id="myModalLabel">Get the ball rolling, <%= current_user.first_name if current_user.first_name?%></h4>
      </div>
      <div class="modal-body" style="height:200px;">
        <div class="col-xs-12 col-sm-12 col-md-12">
          <center>
            <p class="ball-text">Your friends are more likely to donate if you do.</p>
          </center>
        </div>
        <div class="donation-buttons">
          <div class="col-xs-12 col-sm-12 col-md-12">
            <center>
              <span>
                <%= link_to '$2', counter_submission_path(submission_id: @submission.id), class: 'btn btn-banner btn-lg', onclick: 'openCharity200()' %>
              </span>
              <span>
                <%= link_to '$3', counter_submission_path(submission_id: @submission.id), class: 'btn btn-banner btn-lg', onclick: 'openCharity300()' %>
              </span>
              <span>
                <%= link_to '$5', counter_submission_path(submission_id: @submission.id), class: 'btn btn-banner btn-lg', onclick: 'openCharity500()' %>
              </span>
            </center>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $('#welcomeModal').modal('show');
</script>