<% provide(:title, "Trending Articles") %>
<div class='container'>
  <div class="row featured-cards">
    <% @submissions.each do |submission| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <a href="<%= submission_path(submission) %>">  
          <div class="card card-featured">
            <img class="card-img-top" src="<%= submission.image %>" width="100%" height="200px" alt="<%= submission.title %>">
            <div class="card-block">
              <h4 id="card-title"><%= truncate(submission.title, length: 90) %></h4>
              <div class='col-md-6'>
                <p id="card-text"><%= strip_url(submission.url) %></p>
                <h5 id="card-clicks"><%= submission.link_clicks %> Actions Taken</h5>
              </div>
              <div class='col-md-6'>
                <br><br><%= link_to "Take Action", submission_path(submission.id), class: 'btn btn-black-trending' %>
              </div>
            </div>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>




