
<%= form_tag('/donations?amount=500&submission=' + @submission.id.to_s + '&charity=' + @charity.id.to_s) %>
        <noscript>You must <a href="http://www.enable-javascript.com" target="_blank">enable JavaScript</a> in your web browser in order to pay via Stripe.</noscript>
        <input 
            type="submit"
            name="five" 
            value="$5"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-amount="500"
            data-currency="aud"
            data-name="<%= @charity.name%>"
            data-description="Donate $5 to <%= @charity.name%> "
            data-image="<%=@charity.choose_charity_logo%>"
            data-email="<%= current_user.email if user_signed_in? %>"
            data-locale="auto"
            data-allow-remember-me="true"
            class=""
        />
        

        <script src="https://checkout.stripe.com/v2/checkout.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.js"></script>
  
</form>
