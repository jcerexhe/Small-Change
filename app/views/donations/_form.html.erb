<%= simple_form_for(@donation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.input :charity_id, input_html: { value: params[:charity]} %>
    <%= f.input :user %>
    <%= f.input :submission_id, input_html: {value: params[:submission]} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
