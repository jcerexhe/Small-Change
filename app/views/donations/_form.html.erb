<%= simple_form_for(@donation) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :amount %>
    <%= f.association :charity %>
    <%= f.association :user %>
    <%= f.association :submission %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
