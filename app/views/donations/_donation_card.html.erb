<div class="row featured-cards-thanks">
  <div class="card index-card-donation">
    <img class="card-img-top" src="<%= @submission.present? ? @submission.image  : "http://res.cloudinary.com/small-change/image/upload/v1458196252/sc-cut_kunq42.png" %>" width="100%" height="180px" alt="Submission Image">




    <div class="card-block">
      <div class="row">  
        <div class="col-xs-12">
          <h4 id="card-title"><%= @submission.present? ? @submission.title : "Title" %></h4>
          <p class="donation-brag"> <%= current_user ? current_user.first_name : "I" %> small changed $2.00 to Greenpeace after reading this article. </p>
        </div>
      </div>
      <div class="card-bottom">
        <div class='row'>
          <div class='col-xs-5 col-offset-1'>
            <p id="card-text">youtube.com</p>
          </div>
          <div class='col-xs-offset-2 col-xs-2'>
            <i class="fa fa-facebook-square facebook-icon"></i>
          </div>
          <div class='col-xs-2'>
            <i class="fa fa-twitter-square twitter-icon"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>