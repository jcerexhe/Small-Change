<div class="container">
  <% if user_signed_in? %>
    <% if current_user.charity_id %>
      <div class="form-box">
        <div class='col-xs-12 col-md-10 col-md-offset-1'>
          <h1 class="donation-header"><%=@charity.name %> Donor List </h1>
          <%= link_to '<i class="fa fa-clock-o" aria-hidden="true"></i> Most Recent'.html_safe, donations_path(most_recent: true), class: "btn btn-black btn-md" %>
          <%= link_to '<i class="fa fa-money" aria-hidden="true"></i> Amount'.html_safe, donations_path(amount: true), class: "btn btn-black btn-md" %>
          <%= link_to '<i class="fa fa-download" aria-hidden="true"></i> Export'.html_safe, '/donations.csv', class: "btn btn-black btn-md pull-right" %>
        </div>
        <div class='col-xs-12 col-md-10 col-md-offset-1' style="margin-top:20px">
          <table class="table table-hover">
            <thead>
              <tr class='charity-cat-first-row'>
                <th>Amount</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Date</th>
                <th>Submission</th>
                <th>Category</th>
                <th>
                  <center><span type="button" data-toggle="popover" data-placement="top" data-html="true"  data-content="<div> Only donors with the <i class='fa fa-toggle-on'></i> icon have consented to be contacted by <%= @charity.name%>. </div>" data-trigger="hover"><i style="font-size:18px;" class="fa fa-question-circle contact-icon"></i>Contact</span></center>
                </th>
              </tr>
            </thead>

            <tbody>
              <% @donations.each do |donation| %>
                <tr class='charity-cat-row'>
                  <td>$<%= donation.amount/100 %>0</td>
                  <td><%= donation.user.first_name + " " + donation.user.last_name if donation.user_id.present? %></td>
                  <td><%= donation.user_id.present? ? @users.find(donation.user_id).email : donation.email %></td>
                  <% if donation.user_id %>
                    <td><%= @users.find(donation.user_id).mobile if @users.find(donation.user_id).mobile %></td>
                    <% else %>
                    <td></td>
                  <% end %>
                  <td><%= donation.created_at.to_formatted_s(:short) %>
                  <td><a target="_blank" href="<%= Submission.find(donation.submission_id).url %>"><%= donation.submission.title %></a></td>
                  <td> <%= @charity_categories.find(donation.charity_category_id).category_name if donation.charity_category_id.present?%></td>
                  <td><center><i class="fa fa-toggle-<%= donation.contact_me ? "on" : "off"%>" aria-hidden="true"></i></center></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    <% else %>
    <h1 class="donation-header"> Hmmm it seems like you are not a charity. </h1>
    <center><%= link_to "Sign Out And Log In With Your Charity Account", destroy_user_session_path, class: "btn btn-black btn-lg", method: :delete %></center>
    <% end %>
  <% end %>
</div>

<script>
  $(function () {
    $('[data-toggle="popover"]').popover()
  })
</script>