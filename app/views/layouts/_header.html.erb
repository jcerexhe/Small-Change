<header class="navbar navbar-static-top navbar-static-top-main">
  <div class="container">
    <div class="col-sm-10 col-sm-offset-1">
      <div class="navbar-header">
        <a href="<%= user_signed_in? ? home_path : root_path %>" class="navbar-brand navbar-text">
          SMALL CHANGE
        </a>
        <div class="visible-xs">
          <div class="text-right navbar-text">
            <%= link_to ('<i class="fa fa-line-chart"></i>').html_safe, submissions_path, class: 'mobile-icons' %>
            <% if user_signed_in? %>
              <%= link_to ('<i class="fa fa-tachometer"></i>').html_safe, dashboard_path, class: 'mobile-icons' %>
              <%= link_to ('<i class="fa fa-sign-out"></i>').html_safe, destroy_user_session_path, method: :delete, class: 'mobile-icons' %>
            <% else %>
              <%= link_to ('<i class="fa fa-sign-in"></i>').html_safe, new_user_registration_path, class: 'mobile-icons' %>
            <% end %>
          </div>
        </div>
      </div>
      <div class="hidden-xs">
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to ('<i class="fa fa-line-chart"></i> Trending').html_safe, submissions_path, class: 'navbar-text' %></li>
          <% if user_signed_in? && current_user.admin %>
            <li><%= link_to ('<i class="fa fa-cog"></i> Admin').html_safe, admin_index_path , class: 'navbar-text' %></li>
            <li><%= link_to ('<i class="fa fa-tachometer"></i> Dashboard').html_safe, dashboard_path, class: 'navbar-text' %></li>
            <li><%= link_to ('<i class="fa fa-sign-in"></i> Sign out').html_safe, destroy_user_session_path, method: :delete, class: 'navbar-text' %></li>
          <% elsif current_user && current_user.charity_id.present? %>
            <li><%= link_to ('<i class="fa fa-tachometer"> </i>').html_safe+" "+Charity.find(current_user.charity_id).name, dashboard_path, class: 'navbar-text' %></li>
            <li><%= link_to ('<i class="fa fa-sign-in"></i> Sign out').html_safe, destroy_user_session_path, method: :delete, class: 'navbar-text' %></li>
          <% elsif user_signed_in? %>
            <li><%= link_to ('<i class="fa fa-tachometer"></i> Dashboard').html_safe, dashboard_path, class: 'navbar-text' %></li>
            <li><%= link_to ('<i class="fa fa-sign-in"></i> Sign out').html_safe, destroy_user_session_path, method: :delete, class: 'navbar-text' %></li>
          <% else %>
            <li><%= link_to ('<i class="fa fa-sign-in"></i> Sign up').html_safe, new_user_registration_path, class: 'navbar-text' %></li>
          <% end %>
        </ul>
      </div>

    </div>
  </div>
</header>
