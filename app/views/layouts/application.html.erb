<!DOCTYPE html>
<html>
	<head>
 	 <title><%= full_title(yield(:title)) %></title>
   	<%= favicon_link_tag(source='http://res.cloudinary.com/small-change/image/upload/v1456809563/smallchangelogo_e8vtaw.png') %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
   	<%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    
    <% if content_for?(:head) %>
      <%= yield(:head) %>
    <% end %>

 	  <%= render 'shared/googleanalytics' %>

    <% if @submission %>
      <meta property="og:site_name" content="Small Change Giving" />
      <meta property="og:title" content= "<%=@submission.title%>" />
      <meta property="og:description" content="<%=@submission.description%> | Small Change" />
      <meta content="<%=@submission.image%>" property="og:image" />
      <meta property="og:url" content= "<%=@submission.url%>" />
      <meta property="og:type" content="blog" />
    <% end %>

	</head>
	<body>
		<%= render 'layouts/header' %>

		<%= yield %>
			
		<%= render 'layouts/footer' %>
	</body>
</html>
