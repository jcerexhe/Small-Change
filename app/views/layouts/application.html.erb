<!DOCTYPE html>
<html>
	<head>
 	 <title><%= full_title(yield(:title)) %></title>
   	<%= favicon_link_tag(source='http://res.cloudinary.com/small-change/image/upload/v1456809563/smallchangelogo_e8vtaw.png') %>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300' rel='stylesheet' type='text/css'>
    <%= stylesheet_link_tag    'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
   	<%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    

  <meta name="url"    content="<%=@submission.url if @submission.url%>" /> 
  <meta name="title"  content="<%=@submission.title if @submission.title%>" /> 
  <meta name="image"  content="<%=@submission.image if @submission.image%>" /> 
  <meta name="description"  content="<%=@submission.description if @submission.description%>" /> 
  

 	  <%= render 'shared/googleanalytics' %>
	</head>
	<body>
		<%= render 'layouts/header' %>

		<%= yield %>
			
		<%= render 'layouts/footer' %>
	</body>
</html>
