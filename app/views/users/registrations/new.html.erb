<%= render 'layouts/header' %>

<div class = 'col-md-5 panel panel-default'>
  <div class = 'row'>
    <div class = 'other_heading'>
      <h1 class = 'other_heading'>Join.</h1> <br/> 
    </div>
  </div>

  <div class = 'row'>
    <div class = 'col-md-1'></div>
      <div class = 'col-md-10'>
        <br><br>
          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
              <div class="form-inputs form_font">
                <%= f.input :name, required: true, autofocus: true, placeholder: 'e.g. Aisha Jones' %><br/>
                <%= f.input :email, required: true, autofocus: true, placeholder: 'e.g. aishajones@gmail.com' %><br/>
                <%= f.input :admin, required: true, as: :hidden %> 
              </div>
              <div class="form-actions centre">
                  <br><%= f.button :submit, "Sign Up", class:'btn-success btn-lg' %> <br/>
              </div>
          <% end %>
        <br/><br>
      </div>
     <div class = 'col-md-1'></div>
  </div>
</div>

