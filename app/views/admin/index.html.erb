<% provide(:title, "Admin") %>

<div class='container'>
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <% if current_user.admin %>
      <div class="panel">
        <div class="admin-buttons">
          <%= link_to "All", admin_index_path(all: true), class: 'btn btn-black-admin' %>
          <%= link_to "Users", admin_index_path(users: true), class: 'btn btn-black-admin' %>
          <%= link_to "Submissions", admin_index_path(submissions: true), class: 'btn btn-black-admin' %>
          <%= link_to "Charities", admin_index_path(charities: true), class: 'btn btn-black-admin' %>
          <%= link_to "Donations", admin_index_path(donations: true), class: 'btn btn-black-admin' %>
        </div>
          <div class="panel-body">
            <h2 class="page-heading" style="color:black;">Admin Panel</h2>
            <%= render 'submissions' if  params[:submissions] || params[:all] %>
            
            <%= render 'users' if params[:users] || params[:all] %>
            
            <%= render 'charities' if params[:charities] || params[:all] %>
            
            <%= render 'donations' if params[:donations] || params[:all] %>
          </div>
      </div>
    <% else %>
     <h2 class="page-heading">Oops, it seems like you've taken a wrong turn.</h2>
     <div class='btn-admin'>
      <%= link_to "Jump Back To Our Hompage", root_path, class: 'btn btn-black btn-lg' %>
    </div>
    <% end %>
  </div>
</div>
