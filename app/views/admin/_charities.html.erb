<h3>Charities (<%= @charities.count %>)</h3>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Amount Raised</th>
      <th>Contact name</th>
      <th>Contact email</th>
      <th>Account</th>
    </tr>
  </thead>

  <tbody>
    <% @charities.each do |charity| %>
      <tr>
        <td><%= charity.name %></td>
        <td><%= number_to_currency(charity.donations.sum(:amount).to_i / 100) %></td>
        <td><%= charity.contact_name %></td>
        <td><%= charity.contact_email %></td>
        <td><%= charity.account_number%>
        <td><%= link_to 'Donors', charity %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>