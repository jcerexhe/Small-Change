<div class="container">
  <div class="form-box">
    <div class='col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 '>
      <%= simple_form_for(@charity_category) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <% if current_user.charity_id.present? %>
            <%= f.hidden_field :charity_id, :value => current_user.charity_id %>
          <% else %>
            <%= f.association :charity %>
          <% end %>
          <%= f.input :category_name, label: 'Category Name', class: 'sc-header', required: true %>
          <%= f.input :description, required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-lg btn-black" %>
        </div>
      <% end %>
    </div>
  </div>
</div>


