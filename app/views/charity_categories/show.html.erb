
<div class="container">
  <div class= 'col-xs-10 col-xs-offset-1 col-sm-8 col-sm-2 panel-donation'>
    <h4 class="cat-show-header">Charity:</h4>
    <p class="cat-show-para">
      <%= @charity_category.charity.name %>
    </p>
    <h4 class="cat-show-header">Category Name:</h4>
    <p class="cat-show-para">
      <%= @charity_category.category_name %>
    </p>
    <h4 class="cat-show-header">Description:</h4>
    <p class="cat-show-para">
      <%= @charity_category.description %>
    </p>
  </div>
  <div class= 'col-xs-10 col-xs-offset-1 col-sm-8 col-sm-2 pull-right'>
    <%= link_to 'Edit', edit_charity_category_path(@charity_category), class: 'btn btn-black btn-lg' %> 
    <%= link_to 'Back', charity_categories_path, class: 'btn btn-black btn-lg' %>
  </div>
</div>
